@page
@model InfoFlix.Pages.Movies.IndexModel
@{
    ViewData["Title"] = "Home";
}


<div class="card-deck">
    @foreach (var movie in Model.Movies)
    {
    <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
        <a asp-page="/Movies/Details" asp-route-ID="@movie.Id">
            <img class="card-img-top" src="@Html.DisplayFor(m => movie.ImageUrl)" alt="Card image cap">
            </a>
            <div class="card-body">
                <h5 class="card-title text-center">@Html.DisplayFor(m => movie.Title)</h5>
                <p class="card-text">@Html.DisplayFor(m => movie.Synopsis)</p>
                <p class="card-text"><label class="font-weight-bold" asp-for="Movies.FirstOrDefault().ReleaseDate"></label> @Html.DisplayFor(m => movie.ReleaseDate)</p>
                <p class="card-text">
                    <label class="font-weight-bold" asp-for="Movies.FirstOrDefault().Rating"></label>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                </p>
                <center><a class="fa fa-play" href="@Html.DisplayFor(m => movie.TrailerUrl)" style="font-size:48px;color:cadetblue" target="_blank"></a></center>
            </div>
    </div>

    }
</div>

